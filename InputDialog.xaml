<Window x:Class="TaskManager.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="50" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Consolas"
        WindowStartupLocation="CenterScreen">
    
    <Grid Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="White" CornerRadius="10" Padding="5"
                BorderBrush="Gray" BorderThickness="1" Width="280">
            
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
            </Border.Effect>

            <TextBox x:Name="InputTextBox"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     FontSize="14"
                     BorderThickness="0">
                
            </TextBox>
        </Border>
    </Grid>
    
</Window>